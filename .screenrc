autodetach on

vbell off
shell -${SHELL}
term screen-256color
defscrollback 30000
startup_message off

hardstatus on
hardstatus alwayslastline "%{b kw}%H %{r}%1` %{w}| %{g}%c %{w}| %{y}%d.%m.%Y %{w}| %{g}%l %{w}| %{-b kw}%u %-Lw%{= rW}%50> %n%f %t %{-}%+Lw%<"

#chdir $HOME

screen -t "window1" 10
#stuff "cd window1^M"
screen -t "window2" 20
#stuff "cd window2^M"
