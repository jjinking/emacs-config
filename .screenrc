autodetach on

shell -${SHELL}
defscrollback 2024
startup_message off
hardstatus on

term screen-256color

vbell off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

#chdir $HOME

screen -t "window1" 10
#stuff "cd window1^M"
screen -t "window2" 20
#stuff "cd window2^M"
